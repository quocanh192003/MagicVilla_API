@model IEnumerable<MagicVilla_Web.Models.dto.VillaNumberDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
			<h1 class="text-primary">Villa Number List</h1>
        </div>
        <div class="col text-end pt-1">
			<a asp-controller="VillaNumber" asp-action="CreateNumberVilla" class="btn btn-outline-primary" style="color: goldenrod; font-size:20px"><i class="bi bi-plus-square-fill"></i> Create New Villa Number</a>
        </div>
    </div>

    <table class="table">
		<thead>
			<tr>
				<th>
					Villa Name
				</th>
				<th>
					Villa Number
				</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			@foreach(var item in Model){
				<tr>
					<td>@item.villa.Name</td>
					<td>@item.VillaNo</td>
					<td>
						<a asp-controller="VillaNumber" asp-action="UpdateNumberVilla" asp-route-villaNo="@item.VillaNo" class="btn btn-success"><i class="bi bi-pencil-square"></i></a>
						<a asp-controller="VillaNumber" asp-action="DeleteNumberVilla" asp-route-villaNo="@item.VillaNo" class="btn btn-danger"><i class="bi bi-trash-fill"></i></a>
					</td>
				</tr>
			}
		</tbody>
    </table>

</div>